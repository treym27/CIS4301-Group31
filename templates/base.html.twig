<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="A simple banking application.">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
    <title>Bank App</title>

    <!-- favicon -->
    <link rel="shortcut icon" href="{{ asset('/img/favicon.png') }}">

    <!-- material design styleing -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&amp;lang=en">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.blue-deep_orange.min.css">
    <link rel="stylesheet" href="{{ asset('css/main.css') }}" type="text/css">

    <!-- material design script -->
    <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
  </head>
  <title>Edit Account Information</title>
  <body>
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
      <!-- main header for the website -->
      <header class="mdl-layout__header">
        <div class="mdl-layout__header-row">
          <span class="mdl-layout-title">Banking App</span>
          <div class="mdl-layout-spacer"></div>

          <!-- just a place to show login info, won't be seen on small screens -->
          <nav class="mdl-navigation mdl-layout--large-screen-only">
            {% if not global.user %}
              <a class="mdl-navigation__link" href="{{ url('login') }}">Login</a>
            {% else %}
              <a class="mdl-navigation__link" href="{{ url('admin_logout') }}">Logout</a>
            {% endif %}
              
          </nav>
        </div>
      </header>

      <!-- main navigation for website -->
      <div class="mdl-layout__drawer">
        <span class="mdl-layout-title">Banking App</span>
        <nav class="mdl-navigation">
          {% if not global.user %}
            <a class="mdl-navigation__link" href="{{ url('login') }}">Login</a>
            <a class="mdl-navigation__link" href="{{ url('user_edit') }}">Account</a>
          {% else %}
            <a class="mdl-navigation__link" href="{{ url('admin_logout') }}">Logout</a>
          {% endif %}
        </nav>
      </div>

      <!-- main content -->
      <main class="mdl-layout__content">
        {% block content %}
        {% endblock %}
      </main>
    </div>
  </body>
</html>
